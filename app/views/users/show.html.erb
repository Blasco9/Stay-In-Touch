<section class="user-section">
  <h2><%= "Name: #{@user.name}" %></h2>
  
  <% if current_user != @user %>
    <%= determine_link(@user) %>
  <% else %>
    <div>
      <h3>Friendships Requests</h3>
      <ul>
        <%= show_friendship_requests @user.friendship_requests %>
      </ul>
    </div>
  <% end %>

  <article class="timeline">
    <h3>Recent posts:</h3>
    <ul class="posts">
      <%= render @posts %>
    </ul>
  </article>
</section>
