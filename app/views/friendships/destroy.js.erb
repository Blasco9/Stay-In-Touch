id = <%= current_user.id %> == <%= @friendship.friend_id %> ? <%= @friendship.user_id %> : <%= @friendship.friend_id %>
link = document.querySelector(`a[href='/friendships/${id}']`)

if(location.pathname !== '/users') {
  link.parentElement.parentElement.removeChild(link.parentElement)
} else {
  if(link.textContent === 'Reject') {
    link.parentElement.removeChild(link.previousElementSibling)
  }

  link.href = `/friendships?id=${id}`
  
  link.textContent = "Add as Friend"
  
  link.dataset.method = "post"
}
