id = <%= current_user.id %> == <%= @friendship.friend_id %> ? <%= @friendship.user_id %> : <%= @friendship.friend_id %>
link = document.querySelector(`a[href='/accept/${id}']`)

if(location.pathname !== '/users') {
  link.parentElement.parentElement.removeChild(link.parentElement)
} else {
  link.parentElement.removeChild(link.nextElementSibling)

  link.textContent = "Unfriend"

  link.dataset.method = "delete"

  link.href = `/friendships/${id}`
}
